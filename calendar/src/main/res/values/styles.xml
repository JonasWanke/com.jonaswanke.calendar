<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Calendar" />

    <style name="Calendar.CalendarViewStyle">
        <item name="range">week</item>
        <item name="hourHeight">32dp</item>
        <item name="hourHeightMin">24dp</item>
        <item name="hourHeightMax">100dp</item>
    </style>

    <style name="Calendar.DayViewStyle">
        <item name="headerHeightMin">36dp</item>
    </style>

    <style name="Calendar.RangeHeaderViewStyle">
        <item name="android:minHeight">65dp</item>
        <item name="dateSize">32sp</item>
        <item name="dateColor">?android:attr/textColorHint</item>
        <item name="dateCurrentColor">#4285f4</item>
        <item name="dateFutureColor">?android:attr/textColorPrimary</item>
        <item name="weekDaySize">16sp</item>
        <item name="weekDayColor">?android:attr/textColorHint</item>
        <item name="weekDayCurrentColor">#4285f4</item>
        <item name="weekDayFutureColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Calendar.AllDayEventsViewStyle">
        <item name="eventSpacing">4dp</item>
    </style>
    <style name="Calendar.AllDayEventsViewStyle.ForDay">
        <item name="eventSpacing">4dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="Calendar.DayEventsViewStyle">
        <item name="dateCurrentBackground">#0A000000</item>
        <item name="timeCircleRadius">4dp</item>
        <item name="timeLineSize">1dp</item>
        <item name="timeColor">#4285f4</item>
        <item name="hourHeight">32dp</item>
        <item name="hourHeightMin">24dp</item>
        <item name="hourHeightMax">100dp</item>
        <item name="dividerPadding">0dp</item>
        <item name="eventSpacing">4dp</item>
        <item name="eventStackOverlap">20dp</item>
    </style>
    <style name="Calendar.DayEventsViewStyle.ForDay">
        <item name="dateCurrentBackground">@null</item>
        <item name="timeCircleRadius">5dp</item>
        <item name="dividerPadding">16dp</item>
        <item name="eventSpacing">16dp</item>
        <item name="eventStackOverlap">40dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Calendar.EventViewStyle">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="backgroundColorDefault">#039BE5</item>
        <item name="borderWidth">.6dp</item>
        <item name="borderColor">@android:color/white</item>
        <item name="cornerRadius">2dp</item>
        <item name="titleDefault">@string/event_title_default</item>
    </style>
    <style name="Calendar.EventViewStyle.Add">
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/event_title_add</item>
    </style>
    <style name="Calendar.EventViewStyle.AllDay">
        <item name="android:minHeight">24dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Calendar.WeekIndicatorViewStyle">
        <item name="weekOffsetTop">50dp</item>
        <item name="weekSize">12sp</item>
        <item name="weekColor">?android:attr/textColorHint</item>
    </style>
    <style name="Calendar.HoursViewStyle">
        <item name="hourHeight">32dp</item>
        <item name="hourHeightMin">24dp</item>
        <item name="hourHeightMax">100dp</item>
        <item name="hourSize">12sp</item>
        <item name="hourColor">?android:attr/textColorHint</item>
    </style>

</resources>
