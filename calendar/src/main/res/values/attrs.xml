<resources>

    <attr name="hourHeight" format="dimension" />
    <attr name="hourHeightMin" format="dimension" />
    <attr name="hourHeightMax" format="dimension" />
    <attr name="eventSpacing" format="dimension" />

    <declare-styleable name="AppTheme">
        <attr name="calendarViewStyle" format="reference" />

        <attr name="dayViewStyle" format="reference" />

        <attr name="rangeHeaderViewStyle" format="reference" />

        <attr name="allDayEventsViewStyle" format="reference" />
        <attr name="allDayEventsViewForDayStyle" format="reference" />
        <attr name="dayEventsViewStyle" format="reference" />
        <attr name="dayEventsViewForDayStyle" format="reference" />

        <attr name="eventViewStyle" format="reference" />
        <attr name="eventViewAddStyle" format="reference" />
        <attr name="eventViewAllDayStyle" format="reference" />

        <attr name="weekIndicatorViewStyle" format="reference" />
        <attr name="hoursViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CalendarView">
        <attr name="range" format="enum">
            <enum name="day" value="1" />
            <enum name="days_3" value="3" />
            <enum name="week" value="7" />
        </attr>
        <attr name="hourHeight" />
        <attr name="hourHeightMin" />
        <attr name="hourHeightMax" />
    </declare-styleable>

    <declare-styleable name="DayView">
        <attr name="headerHeightMin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RangeHeaderView">
        <attr name="dateSize" format="dimension" />
        <attr name="dateColor" format="color" />
        <attr name="dateCurrentColor" format="color" />
        <attr name="dateFutureColor" format="color" />
        <attr name="weekDaySize" format="dimension" />
        <attr name="weekDayColor" format="color" />
        <attr name="weekDayCurrentColor" format="color" />
        <attr name="weekDayFutureColor" format="color" />
    </declare-styleable>

    <declare-styleable name="AllDayEventsView">
        <attr name="eventSpacing" />
    </declare-styleable>

    <declare-styleable name="DayEventsView">
        <attr name="dateCurrentBackground" format="color|reference" />
        <attr name="hourHeight" />
        <attr name="hourHeightMin" />
        <attr name="hourHeightMax" />
        <attr name="timeCircleRadius" format="dimension" />
        <attr name="timeLineSize" format="dimension" />
        <attr name="timeColor" format="color" />
        <attr name="dividerPadding" format="dimension" />
        <attr name="eventSpacing" />
        <attr name="eventStackOverlap" format="dimension" />
    </declare-styleable>

    <declare-styleable name="EventView">
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="backgroundColorDefault" format="color" />
        <attr name="titleDefault" format="string" />
    </declare-styleable>

    <declare-styleable name="WeekIndicatorView">
        <attr name="weekOffsetTop" format="dimension" />
        <attr name="weekSize" format="dimension" />
        <attr name="weekColor" format="color" />
    </declare-styleable>
    <declare-styleable name="HoursView">
        <attr name="hourHeight" />
        <attr name="hourHeightMin" />
        <attr name="hourHeightMax" />
        <attr name="hourSize" format="dimension" />
        <attr name="hourColor" format="color" />
    </declare-styleable>

</resources>
